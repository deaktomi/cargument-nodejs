<%- include('header') %>
<%- include('profile-header',{user : user}) %>

<div>
    <div class="col-xs-12 text-center">
        <h2><%= conversation._user2.name %> - <%= conversation._user2.regNumber %> - Messages:</h2>
    </div>

    <div class="col-md-push-3 col-md-6 col-xs-12">
    <% conversation._messages.forEach(function (message){ %>
        <% if (message.senderId == conversation._user2.id) { %>
        <div class="alert-warning">
            <b>Me:</b><br/>
            <%= message.body%>
        </div>
        <% } else { %>
        <div class="alert-info">
            <b><%= conversation._user2.name %>:</b><br/>
            <%= message.body%>
        </div>
        <% } %>
     <% }); %>
    </div>

    <div class="col-xs-12 text-center">
        <h2>New message:</h2>
    </div>
    <div class="col-md-push-3 col-md-6 col-xs-12">
        <form method="POST" action="/message/add/<%= conversation._id %>">
            <div class="form-group">
                <label for="message">Message: </label>
                <textarea rows="3" class="form-control" id="message" name="message"></textarea>
            </div>
            <div class="form-group">
                <input  type="submit" class="btn btn-primary" value="Send"/>
            </div>
        </form>
    </div>
</div>

<%- include('footer') %>