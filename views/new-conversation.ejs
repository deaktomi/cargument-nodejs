<%- include('header') %>
<%- include('profile-header',{user : user}) %>

<div>
    <div class="col-xs-12 text-center">
        <h2>New message:</h2>
    </div>
    <div class="col-md-push-3 col-md-6 col-xs-12">
        <form method="post">
            <div class="form-group">
                <label for="targetRegNumber">Target's registration number: </label>
                <input type="text"class="form-control" id="targetRegNumber" />
            </div>
            <div class="form-group">
                <label for="message">Message: </label>
                <textarea rows="3" class="form-control" id="message"></textarea>
            </div>
            <div class="form-group">
                <input action="/conversations/new" type="submit" class="btn btn-primary" value="Send"/>
            </div>
        </form>
    </div>
</div>

<%- include('footer') %>