<%- include('header') %>
<%- include('profile-header',{user : user}) %>

<div>
    <div class="col-xs-12 text-center">
        <h2><%= conversation.user.name %> - <%= conversation.user.regNumber %> - Messages:</h2>
    </div>

    <div class="col-md-push-3 col-md-6 col-xs-12">
    <% conversation.messages.forEach(function (message){ %>
        <% if (message.senderId == user.id) { %>
        <div class="alert-warning">
            <b>Me:</b><br/>
            <%= message.body%>
        </div>
        <% } else { %>
        <div class="alert-info">
            <b><%= conversation.user.name %>:</b><br/>
            <%= message.body%>
        </div>
        <% } %>
     <% }); %>
    </div>

    <div class="col-xs-12 text-center">
        <h2>New message:</h2>
    </div>
    <div class="col-md-push-3 col-md-6 col-xs-12">
        <form method="POST">
            <div class="form-group">
                <label for="message">Message: </label>
                <textarea rows="3" class="form-control" id="message"></textarea>
            </div>
            <div class="form-group">
                <!-- NEED HELP: Itt hiába írom át bármire a route-ot mindig /conversations/details/1 -re fut rá-->
                <input action="/message/add/<%= conversation.id %>" type="submit" class="btn btn-primary" value="Send"/>
            </div>
        </form>
    </div>
</div>

<%- include('footer') %>